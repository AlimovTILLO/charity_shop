    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :thumbnail %>
    <%= f.file_field :thumbnail %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
