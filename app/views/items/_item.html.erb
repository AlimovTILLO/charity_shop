<div class="col-md-4">
  <div class="thumbnail item">
    <a href="#">
      <%= image_tag item.thumbnail.small, class: 'item_image' %>
    </a>

    <div class="caption">
      <h3><%= item.title %></h3>
      <p><%= item.description %></p>
      <p class="lead"><%= item.price %></p>
      <p>
        <a href="#" class="btn btn-success">Go!</a>
      </p>
    </div>
  </div>
</div>
