<div class="col-md-4">
  <div class="thumbnail item">
    <a href="/items/<%=item.id %>">
      <%= image_tag item.thumbnail.small, class: 'item_image' %>
    </a>

    <div class="caption">
      <h3 style="height: 50px;"><%= item.title %></h3>
      <!--<p><%= item.description.truncate 150 %></p>-->
      <p class="lead price"><%= item.price %></p>
      <p class="lead" style="font-style: italic; font-size: 13px;">
        <%= item.charity %>% goes to foundation<br/>
        <%= item.foundation.name %>
      </p>
      <p style="text-align: center;">
        <a href="/items/<%=item.id %>" class="btn btn-success btn-block">View</a>
      </p>
    </div>
  </div>
</div>
