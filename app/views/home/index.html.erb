<style type="text/css">
	nav {
		border-color: rgba(8, 8, 8, 0) !important;
		background-color: rgba(34, 34, 34, 0) !important;
	}

	nav > .container {
		position: relative;
		top: 5px;
	}

	.navbar-brand > img {
		height: 42px !important;
	}

	.main-img {
		float: left;
		margin-top: -72px;
		width: 100%;
	}

	.navbar-nav > li > a {
		color: white !important;
	}

	img.round-img {
		border-radius: 50%;
		width: 150px;
		position: absolute;
		top: -150px;
		left: 50%;
		transform: translateX(-50%);
		box-shadow: 0 0 15px rgba(0,0,0, 0.5);
	}
